# Google Custom Search API 設定
# 実際の本番環境では以下の環境変数を設定してください

# Google Custom Search API Key
# Google Cloud Console で取得
GOOGLE_SEARCH_API_KEY=your_google_api_key_here

# Programmable Search Engine ID  
# https://programmablesearchengine.google.com/ で作成
GOOGLE_SEARCH_ENGINE_ID=your_search_engine_id_here

# 検索設定
SEARCH_RATE_LIMIT=100          # 100秒あたりの最大検索数
SEARCH_CACHE_DURATION=1800     # キャッシュ保持時間（秒）
SEARCH_MAX_RETRIES=3           # 最大リトライ数
SEARCH_TIMEOUT=8000            # タイムアウト（ミリ秒）

# 宝塚特化検索設定
TAKARAZUKA_SITE_SEARCH=kageki.hankyu.co.jp,ja.wikipedia.org
TAKARAZUKA_EXCLUDE_TERMS=cosplay,fan art,同人,二次創作
TAKARAZUKA_IMAGE_RIGHTS=cc_publicdomain,cc_attribute,cc_sharealike

# セキュリティ設定
SAFE_SEARCH=active             # セーフサーチレベル
ADULT_FILTER=strict            # アダルトフィルター
CONTENT_FILTER=high            # コンテンツフィルター

# パフォーマンス設定
IMAGE_QUALITY_MIN_WIDTH=200    # 最小画像幅
IMAGE_QUALITY_MIN_HEIGHT=200   # 最小画像高さ
IMAGE_MAX_FILE_SIZE=1048576    # 最大ファイルサイズ（1MB）

# ログ設定
LOG_LEVEL=info                 # ログレベル (debug, info, warn, error)
LOG_SEARCH_QUERIES=true        # 検索クエリのログ出力
LOG_API_RESPONSES=false        # APIレスポンスのログ出力（デバッグ用）